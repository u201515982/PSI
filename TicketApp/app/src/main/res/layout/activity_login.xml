<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/outline_black"
    android:id="@+id/login_layout"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_logocolor"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Programa Subsectorial\nde Irrigaciones"
            android:textSize="24sp"
            android:fontFamily="@font/ubuntulight"
            android:textColor="#FFFFFF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:orientation="horizontal"
            android:background="@drawable/shape_trans">

            <EditText
                android:id="@+id/login_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Usuario"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textColorHint="#A2A2A2"
                android:backgroundTint="#00000000"
                android:drawableStart="@drawable/baseline_perm_identity_24"
                android:drawablePadding="8dp"
                android:drawableTint="#FFFFFF"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:orientation="horizontal"
            android:background="@drawable/shape_trans">

            <EditText
                android:id="@+id/login_password"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="ContraseÃ±a"
                android:inputType="textPassword"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textColorHint="#A2A2A2"
                android:backgroundTint="#00000000"
                android:drawableStart="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:drawableTint="#FFFFFF"/>

            <ImageButton
                android:id="@+id/psw_show_hide"
                android:tag="show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_visibility_off_24"
                android:padding="12dp"
                android:backgroundTint="#00000000"
                android:tint="#FFFFFF"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:text="LOGIN"
            android:fontFamily="@font/ubunturegular"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/ripple_effect"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>